" enbale syntax highlighting
filetype plugin indent on

syntax on
set nocompatible                " be iMproved, required
filetype off                    " required
set backspace=indent,eol,start  " Fix the backspace problem in osx

" set line number
set number

set autoindent
set smartindent
set tabstop=4
set shiftwidth=4
set expandtab
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
